@charset "UTF-8";

#payment{
    margin-top: 80px;
    margin-bottom: 200px;
}
#payment .order{
    color: #1080e9;
    text-decoration: underline;
}
#payment .line1{
    line-height: 30px;
    text-indent: 10px;
}
#payment .line2{
    height:60px;
    line-height: 60px;
    background-color: #f2f2f2;
    text-indent: 10px;
}
#payment .line2 .num{
    margin-right:100px;
}
#payment .line3{
    line-height: 40px;
    padding:10px 0;
}
#payment .line3 .pay{
    width:150px;
    height:40px;
    text-align: center;
    margin-right:10px;
}
#payment .line4{
    height:100px;
    box-sizing: border-box;
    padding: 28px 0 37px 64px;
    background-color: #f2f2f2;
}
#payment .line4 .card{
    width:125px;height:34px;line-height: 30px;
    box-sizing: border-box;
    text-align: center;
    margin-right:20px;
    border:2px solid #f60;
    background: url("../images/gou.jpg") no-repeat 106px 18px;
}
#payment .line4 .recent{
    width:330px;height:34px;line-height: 30px;
    box-sizing: border-box;
    border:2px solid #ccc;
    padding-left: 30px;
    margin-right: 30px;
}
#payment .line4 .addCard{
    width:120px;height:34px;line-height: 32px;
    background-color: #999999;
    text-align: center;
}
#payment .line4 .money{
    height:34px;line-height: 32px;
    margin-right: 30px;
}
#payment .line5{
    margin:12px 0 40px 0;
}
#payment .line5 #goPay{
    width:228px;height:60px;line-height: 60px;
    text-align: center;
    background-color: #ff6600;
    color:#fff;font-size: 24px;
    cursor: pointer;
}

#payment .line6{
    height:40px;line-height: 40px;
    margin-bottom: 15px;
}
#payment .line6 .others{
    width:150px;
    background-color:  #76aff5;
    text-align: center;
    cursor: pointer;
    margin-right: 10px;
}
#payment .line7{
    padding-left: 80px;
    height:100px;
    line-height: 100px;
}
#payment .line7 a{
    font-size: 16px;
    margin: 0 15px;
}



.remodal{
    width:500px !important;
    height:280px;
    padding: 0 !important;
}
.remodal #modal1Title{
    text-align: left;
    height:40px;
    line-height: 40px;
    color:#676767;
    background-color: #e6e6e6;
    font-weight: normal;
    font-size: 20px;
    text-indent: 20px;
    margin-bottom: 40px;
}
.remodal .remodal-cancel{
    margin-right: 20px;
    font-size: 16px;
}
.remodal .remodal-confirm{
    font-size: 16px;
}















